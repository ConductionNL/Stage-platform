                    {#                                <li class="page-item"><a class="page-link" href="#">Next</a></li>#}
                    {#                            </ul>#}
                    {#                        </nav>#}
                    {#                    </div>#}

                {% else %}

                    <p>{{ 'no results found'|trans|capitalize }}</p>
                {% endif %}

            </div>
        </div>
    </section>
    <section class="section section-lg pb-5 bg-soft">
        <div class="container z-2">
            <div class="row justify-content-center">
                <div class="col-md-10 text-center">
                    <h2 class="h1">{{ 'do you miss your organization here?'|trans|capitalize }}</h2>
                    <p>{{ 'Dont worry, joining the comunnity and adding the your organizations unqiue value to it is a breazey. Just register and add it under organizations'|trans|capitalize }}</p>

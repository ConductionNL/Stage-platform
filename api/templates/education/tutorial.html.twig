{% extends "base.html.twig" %}

{% block content %}

    <!-- The header -->
    <section class="section-header pb-10 pb-lg-11 mb-4 mb-lg-6 bg-primary text-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 text-center mb-4 mb-lg-5">
                    <h1 class="display-2 font-weight-extreme mb-4">{{ tutorial.name }}</h1>
                    <p class="lead">{{ tutorial.description }}</p>

                    {% if tutorial.organization is defined and tutorial.organization is not empty %}
                    {% set organization = commonground_resource(tutorial.organization) %}

                    <div class="d-flex flex-column flex-lg-row justify-content-center">
                        <span class="h5 mb-3 mb-lg-0"><i class="fas fa-clock"></i><span class="ml-3">{{ tutorial.timeRequired }}</span></span>
                        <span class="ml-lg-5 mb-3 mb-lg-0 h5"><i class="fas fa-user-tie"></i><span class="ml-3">{{ organization.name }}</span></span>
                        <span class="ml-lg-5 mb-3 mb-lg-0 h5"><i class="fas fa-file-invoice-dollar"></i><span class="ml-3">[[ something else ]]</span></span>
                    </div>
                    {% endif %}
                </div>
                <div class="col col-12 text-center"><a href="{{ path('app_education_tutorials') }}" class="btn btn-secondary text-white animate-up-2 mr-3"><i class="fas fa-arrow-left mr-2"></i>{{'all tutorials'|trans|capitalize}}</a>
                    <a href="#registeer" class="btn btn-white text-primary animate-up-2"><i class="fas fa-clipboard-list mr-2"></i>{{'register now'|trans|capitalize}}</a></div>
            </div>
        </div>
        <div class="pattern bottom"></div>
    </section>

    <!-- The tutorial -->
    <article class="section section-lg pt-0">
        <div class="container mt-n8 mt-lg-n11 z-2">
            <div class="row justify-content-center">
                <div class="col">
                    <div class="card shadow-soft border-light p-4 p-md-5">
                        <div class="card-body">
                            {{ tutorial.text }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>

    <!-- Registration -->
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col">
                <div class="card bg-soft shadow-soft border-light p-4 p-md-5">
                    <div class="mb-1 text-center">
                        <h2 class="h1">{{'register for this tutorial'|trans|capitalize}}</h2>
                    </div>

                    <form action="{{ path('app_education_tutorial', {id: tutorial.id}) }}" method="post">
                        <div class="row">

                            <div class="col col-12 mt-4">
                                <div class="form-group">
                                    <label class="form-label text-muted" for="motivation">{{'motivation'|trans|capitalize}} <span class="text-danger">*</span></label>
                                    <textarea class="form-control" placeholder="{{'motivate your registration'|trans|capitalize}}" id="motivation" name="motivation" rows="8" required=""></textarea>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-secondary mt-4"><span class="mr-2"><i class="fas fa-paper-plane"></i></span> {{'register'|trans|capitalize}}</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Other tutorials -->
    <section class="section section-lg pb-5 bg-soft">
        <div class="container">
            <div class="row justify-content-center mb-4 mb-lg-5">
                <div class="col">
                    <h2 class="h2">{{'other tuturials from this organization'|trans|capitalize}}</h2>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% extends "dashboard/base.html.twig" %}

{% block content %}

    <!-- breadcrumbs -->
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
        <div class="d-block mb-4 mb-md-0">
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
                <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent">
                    <li class="breadcrumb-item"><a href="{{ path('app_default_index') }}"><span
                                class="fas fa-home"></span></a></li>
                    <li class="breadcrumb-item"><a
                            href="{{ path('app_dashboard_index') }}">{{ 'Dashboard'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item active"><a
                            href="{{ path('app_dashboardorganization_settings') }}">{{ 'settings'|trans|capitalize }}</a>
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <nav id="sidebarMenu" class="sidebar d-md-block bg-primary text-white collapse px-4">
                {% include 'dashboard/menu.html.twig' %}
            </nav>
            <main class="content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
                    <div class="btn-toolbar">
                        <button class="btn btn-primary btn-sm mr-2 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="fas fa-plus mr-2"></span>{{ 'new task'|trans|capitalize }}</button>
                        <div class="dropdown-menu dashboard-dropdown dropdown-menu-left mt-2"><a class="dropdown-item font-weight-bold" href="#"><span class="fas fa-tasks mr-2"></span>{{ 'new task'|trans|capitalize }}</a> <a class="dropdown-item font-weight-bold" href="#"><span class="fas fa-cloud-upload-alt mr-2"></span>Upload Files</a> <a class="dropdown-item font-weight-bold" href="#"><span class="fas fa-user-shield mr-2"></span>Preview Security</a>
                            <div role="separator" class="dropdown-divider"></div><a class="dropdown-item font-weight-bold" href="#"><span class="fas fa-rocket text-danger mr-2"></span>{{ 'upgrade to pro'|trans|capitalize }}</a></div>
                    </div>
                    <div class="btn-group mr-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary">{{ 'share'|trans|capitalize }}</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">{{ 'export'|trans|capitalize }}</button>
                    </div>
                </div>
                <div class="row justify-content-md-center">
                    <div class="col-12 col-sm-6 col-xl-4 mb-4">
                        <div class="card border-light shadow-sm">
                            <div class="card-body">
                                <div class="row d-block d-xl-flex align-items-center">
                                    <div class="col-12 col-xl-5 text-xl-center mb-3 mb-xl-0 d-flex align-items-center justify-content-xl-center">
                                        <div class="icon icon-shape icon-md icon-shape-primary rounded mr-4 mr-sm-0"><span class="fas fa-chart-line"></span></div>
                                        <div class="d-sm-none">
                                            <h2 class="h5">{{ 'total visits'|trans|capitalize }}</h2>
                                            <h3 class="mb-1">345,678</h3></div>
                                    </div>
                                    <div class="col-12 col-xl-7 px-xl-0">
                                        <div class="d-none d-sm-block">
                                            <h2 class="h5">{{ 'total visits'|trans|capitalize }}</h2>
                                            <h3 class="mb-1">345,678</h3></div><small>Feb 1 - Apr 1, <span class="icon icon-small"><span class="fas fa-globe-europe"></span></span> {{ 'worldwide'|trans|capitalize }}</small>
                                        <div class="small mt-2"><span class="fas fa-angle-up text-success"></span> <span class="text-success font-weight-bold">18.2%</span>{{ 'since last month'|trans|capitalize }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-xl-4 mb-4">
                        <div class="card border-light shadow-sm">
                            <div class="card-body">
                                <div class="row d-block d-xl-flex align-items-center">
                                    <div class="col-12 col-xl-5 text-xl-center mb-3 mb-xl-0 d-flex align-items-center justify-content-xl-center">
                                        <div class="icon icon-shape icon-md icon-shape-tertiary rounded mr-4"><span class="fas fa-users"></span></div>
                                        <div class="d-sm-none">
                                            <h2 class="h5">{{ 'new users'|trans|capitalize }}</h2>
                                            <h3 class="mb-1">5,342</h3></div>
                                    </div>
                                    <div class="col-12 col-xl-7 px-xl-0">
                                        <div class="d-none d-sm-block">
                                            <h2 class="h5">{{ 'new users'|trans|capitalize }}</h2>
                                            <h3 class="mb-1">5,342</h3></div><small>Feb 1 - Apr 1, <span class="icon icon-small"><span class="fas fa-globe-europe"></span></span> {{ 'worldwide'|trans|capitalize }}</small>
                                        <div class="small mt-2"><span class="fas fa-angle-up text-success"></span> <span class="text-success font-weight-bold">28.2%</span>{{ 'since last month'|trans|capitalize }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-xl-4 mb-4">
                        <div class="card border-light shadow-sm">
                            <div class="card-body">
                                <div class="row d-block d-xl-flex align-items-center">
                                    <div class="col-12 col-xl-5 text-xl-center mb-3 mb-xl-0 d-flex align-items-center justify-content-xl-center">
                                        <div class="ct-chart-traffic-share ct-golden-section ct-series-a"></div>
                                    </div>
                                    <div class="col-12 col-xl-7 px-xl-0">
                                        <h2 class="h5">{{ 'traffic share'|trans|capitalize }}</h2>
                                        <div class="mb-3 small">Feb 1 - Apr 1, <span class="icon icon-small"><span class="fas fa-globe-europe"></span></span>{{ 'worldwide'|trans|capitalize }}</div>
                                        <h6 class="font-weight-normal text-gray"><span class="icon w-20 icon-xs icon-secondary mr-1"><span class="fas fa-desktop"></span></span>{{ 'desktop'|trans|capitalize }}<a href="#" class="h6">70%</a></h6>
                                        <h6 class="font-weight-normal text-gray"><span class="icon w-20 icon-xs icon-primary mr-1"><span class="fas fa-mobile-alt"></span></span>{{ 'mobile web'|trans|capitalize }} <a href="#" class="h6">30%</a></h6></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label for="coc">{{ 'coc'|trans|capitalize }}</label>
                                <input class="form-control" id="coc" name="coc" type="text"
                                       value="">
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label for="vatID">{{ 'vatID'|trans|capitalize }}</label>
                                <input class="form-control" id="vatID" name="vatID" type="text"
                                       value="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="adresses[]">{{ 'adresses'|trans|capitalize }}</label>
                                <input class="form-control" id="adresses[]" name="adresses[]" type="text"
                                       value="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label for="telephones[]">{{ 'telephones'|trans|capitalize }}</label>
                                <input class="form-control" id="telephones[]" name="telephones[]" type="text"
                                       value="">
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label for="emails[]">{{ 'emails'|trans|capitalize }}</label>
                                <input class="form-control" id="emails[]" name="emails[]" type="text"
                                       value="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                {% if organization.socials.0.facebook|default %}
                                <label for="socials.facebook">{{ 'facebook'|trans|capitalize }}</label>
                                <input class="form-control" id="socials.facebook" name="socials.facebook" type="text"
                                       value="{{ organization.socials.0.facebook }}">
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                {% if organization.socials.0.twitter|default %}
                                    <label for="socials.twitter">{{ 'twitter'|trans|capitalize }}</label>
                                    <input class="form-control" id="socials.twitter" name="socials.twitter" type="text"
                                           value="{{ organization.socials.0.twitter }}">
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="form-group">
                                {% if organization.socials.0.linkedin|default %}
                                    <label for="socials.linkedin">{{ 'linkedin'|trans|capitalize }}</label>
                                    <input class="form-control" id="socials.linkedin" name="socials.linkedin" type="text"
                                           value="{{ organization.socials.0.linkedin }}">
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-group">
                                {% if organization.socials.0.instagram|default %}
                                    <label for="socials.instagram">{{ 'instagram'|trans|capitalize }}</label>
                                    <input class="form-control" id="socials.instagram" name="socials.instagram" type="text"
                                           value="{{ organization.socials.0.instagram }}">
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-group">
                                {% if organization.socials.0.website|default %}
                                    <label for="socials.website">{{ 'website'|trans|capitalize }}</label>
                                    <input class="form-control" id="socials.website" name="socials.website" type="text"
                                           value="{{ organization.socials.0.website }}">
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">{{ 'save'|trans|capitalize }}</button>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}

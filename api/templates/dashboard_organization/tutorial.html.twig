{% extends "dashboard/base.html.twig" %}

{% block content %}
    <!-- breadcrumbs -->
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
        <div class="d-block mb-4 mb-md-0">
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
                <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent">
                    <li class="breadcrumb-item"><a href="{{ path('app_default_index') }}"><span
                                class="fas fa-home"></span></a></li>
                    <li class="breadcrumb-item"><a
                            href="{{ path('app_dashboard_index') }}">{{ 'Dashboard'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item"><a
                            href="{{ path('app_dashboardorganization_tutorials') }}">{{ 'Tutorials'|trans|capitalize }}</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ 'Tutorial'|trans|capitalize }}</li>
                </ol>
            </nav>
            <h2 class="h4">{{ tutorial.name }}</h2>
            <p class="mb-0">[text about what a tutorial is]</p>
        </div>
    </div>


    <form action="{{ path('app_dashboardorganization_tutorial',{'id': tutorial.id}) }}" method="post">
        <!-- left collum -->
    <div class="row">
        <div class="col-12 col-xl-8">
            <div class="card card-body bg-white border-light shadow-sm mb-4">
                <h2 class="h5 mb-4">General information</h2>
                    {% if tutorial['@id'] is defined and tutorial['@id'] is not empty %}
                        <input type="hidden" name="@id" id="@id" value="{{ tutorial['@id'] }}">
                    {% endif %}


                    <input type="hidden" name="organization" id="organization"
                           value="https://dev.zuid-drecht.nl/api/v1/wrc/organizations/c571bdad-f34c-4e24-94e7-74629cfaccc9">


                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="Tutorial name">{{ 'Tutorial name'|trans|capitalize }}</label>
                                <input class="form-control" id="name" type="text"
                                    {% if tutorial.name is defined and tutorial.name is not empty %}
                                        value="{{ tutorial.name }}" {% else %}
                                        placeholder="{{ 'your tutorial name...'|trans|capitalize }}"{% endif %}
                                       name="name" required>
                            </div>
                        </div>
                    </div>

                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="description">{{ 'Tutorial description'|trans|capitalize }}</label>
                                <input class="form-control" id="description" type="text"
                                       required=""
                                    {% if tutorial.description is defined and tutorial.description is not empty %}
                                        value="{{ tutorial.description }}" {% else %}
                                        placeholder="{{ 'your tutorial description...'|trans|capitalize }}"{% endif %}
                                       name="description" required>
                            </div>
                        </div>
                    </div>

                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="text">{{ 'Tutorial text'|trans|capitalize }}</label>
                                {% if tutorial.text is defined and tutorial.text is not empty %}
                                    <textarea class="form-control" id="text" name="text" rows="3"
                                              cols="6">{{ tutorial.text }}</textarea>
                                {% else %}
                                    <textarea class="form-control" id="text" name="text"
                                              placeholder="The text of your tutorial will be displayed here..."
                                              rows="3" cols="6"></textarea>{% endif %}
                            </div>
                        </div>
                    </div>

                <div class="row align-items-center">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label for="additionalType">Type tutorial</label>
                        <select class="form-control" name="additionalType" id="additionalType">

                            <option value="werkomgeving">{{ 'werkomgeving'|trans }}</option>
                            <option value="setup">{{ 'setup'|trans }}</option>
                            <option value="layout"> {{ 'layout'|trans }} </option>
                            <option value="datamodellen">{{ 'datamodellen'|trans }}</option>

                        </select>
                    </div>
                </div>


                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label for="time required">{{ 'Tutorial time required '|trans|capitalize }}</label>
                                <input class="form-control" id="description" type="text"
                                       required=""
                                    {% if tutorial.timeRequired is defined and tutorial.timeRequired is not empty %}
                                        value="{{ tutorial.timeRequired }}" {% else %}
                                        placeholder="{{ 'The time required to read the tutorial...'|trans|capitalize }}"{% endif %}
                                       name="timeRequired" required>
                            </div>
                        </div>
                    </div>

                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label
                                    for="educationalCredentialAwarded">{{ 'Educational credential '|trans|capitalize }}</label>
                                <input class="form-control" id="educationalCredentialAwarded" type="text"
                                       required=""
                                    {% if tutorial.educationalCredentialAwarded is defined and tutorial.educationalCredentialAwarded is not empty %}
                                        value="{{ tutorial.educationalCredentialAwarded }}" {% else %}
                                        placeholder="{{ 'The level of education required for this tutorial...'|trans|capitalize }}"{% endif %}
                                       name="educationalCredentialAwarded" required>
                            </div>
                        </div>
                    </div>

                <div class="row align-items-center">
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label for="video">{{ 'video url '|trans|capitalize }}</label>
                            <input class="form-control" id="video" type="text"
                                   placeholder="{{ 'A url for a video as an example...'|trans|capitalize }}" name="video">
                        </div>
                    </div>
                </div>

                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label
                                    for="occupationalCredentialAwarded">{{ 'Occupational Credential'|trans|capitalize }}</label>

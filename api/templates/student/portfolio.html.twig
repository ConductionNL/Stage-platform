{% extends "base.html.twig" %}

{% block content %}
    <section class="section-header pb-10 pb-lg-11 mb-4 mb-lg-6 bg-primary text-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 text-center mb-4 mb-lg-5">
                    <h1 class="display-2 font-weight-extreme mb-4">{{ person.name }}</h1>
                    <div class="d-flex flex-column flex-lg-row justify-content-center">
                        {% if person.birthday is defined and person.birthday is not empty %}
                            <span class="h5 mb-3 mb-lg-0"><i class="fal fa-birthday-cake"></i><span
                                    class="ml-3">{{ person.birthday }}</span></span>
                        {% endif %}
                    </div>
                </div>
                <div class="col col-12 text-center">
                    <a href="{{ path('app_student_index') }}" class="btn btn-secondary text-white animate-up-2 mr-3"><i
                            class="fas fa-arrow-left mr-2"></i>{{ 'See All Students'|trans|capitalize }}</a>
                    <a href="#contact" class="btn btn-white text-primary animate-up-2"><i
                            class="fad fa-address-book"></i> {{ 'Contact'|trans|capitalize }}</a>
                </div>
            </div>
        </div>
        <div class="pattern bottom"></div>
    </section>
    <section class="section section-lg pt-0">
        <div class="container mt-n8 mt-lg-n11 z-2">
            <div class="row justify-content-center">
                <div class="col">
                    <div class="card shadow-soft border-light p-4 p-md-5">
                        <div id="contact" class="row">
                            <div class="col">
                                <!-- Card -->
                                <div class="card bg-soft shadow-soft border-0 text-black py-4 p-lg-5">
                                    <div class="card-body p-4">
                                        <div class="mb-5 mb-lg-6 text-center">
                                            <h2 class="h1">{{ 'contact'|trans|capitalize }}</h2>
                                        </div>
                                        <form action="#" method="post">
                                            <div class="row">
                                                <div class="col-12 col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label text-muted"
                                                               for="firstNameLabel">{{ 'First Name'|trans|capitalize }}
                                                            <span class="text-danger">*</span></label>
                                                        <div class="input-group mb-4">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text"><i
                                                                        class="fas fa-user-alt"></i></span>
                                                            </div>
                                                            <input class="form-control" id="firstNameLabel"
                                                                   placeholder="{{ 'First Name'|trans|capitalize }}"
                                                                   type="text" required="">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label text-muted"
                                                               for="lastNameLabel">{{ 'Last Name'|trans|capitalize }}
                                                            <span class="text-danger">*</span></label>
                                                        <div class="input-group mb-4">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text"><i
                                                                        class="fas fa-user-alt"></i></span>
                                                            </div>
                                                            <input class="form-control" id="lastNameLabel"
                                                                   placeholder="{{ 'Last Name'|trans|capitalize }}"
                                                                   type="text" required="">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label text-muted"
                                                               for="EmailLabel">{{ 'Email'|trans|capitalize }}<span
                                                                class="text-danger">*</span></label>
                                                        <div class="input-group mb-4">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text"><i
                                                                        class="fas fa-envelope"></i></span>
                                                            </div>
                                                            <input class="form-control" id="EmailLabel"
                                                                   placeholder="{{ 'Can we get your email?'|trans|capitalize }}"
                                                                   type="email" required="">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label text-muted"
                                                               for="phonenumberLabel">{{ 'Phone Number'|trans|capitalize }}
                                                            <span class="text-danger">*</span></label>
                                                        <div class="input-group mb-4">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text"><i
                                                                        class="fas fa-phone-square-alt"></i></span>
                                                            </div>
                                                            <input class="form-control" id="phonenumberLabel"
                                                                   placeholder="{{ 'Phone number'|trans|capitalize }}"
                                                                   type="number" required="">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col col-12 mt-4">
                                                    <div class="form-group">
                                                        <label class="form-label text-muted" for="phonenumberLabel">Few
                                                            words... {{ 'submit'|trans|capitalize }}<span
                                                                class="text-danger">*</span></label>
                                                        <textarea class="form-control"
                                                                  placeholder="How'd you hear about Rocket?{{ 'submit'|trans|capitalize }}"
                                                                  id="message-2" rows="8"></textarea>
                                                    </div>
                                                    <div class="text-center">
                                                        <button type="submit" class="btn btn-secondary mt-4"><span
                                                                class="mr-2"><i
                                                                    class="fas fa-paper-plane"></i></span>{{ 'submit'|trans|capitalize }}
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% if student is defined and student is not empty %}
        {% for student in students %}
            {% if student['@id'] != student['@id'] %}
                <section class="section section-lg pb-5 bg-soft">
                    <div class="container">
                        <div class="row justify-content-center mb-4 mb-lg-5">
                            <div class="col">
                                <h2 class="h2">{{ 'other students'|trans|capitalize }}</h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-xl-4 mb-4">
                                <div class="card bg-white border-light shadow-soft p-3">
                                    <div class="card-header p-4">
                                        <h3 class="mb-3 h4">{{ person.name }}</h3>
                                        <div class="d-flex small">
                                            {% if person.birthday is defined and person.birthday is not empty %}
                                                <span class="icon-primary ml-4"><i class="fas fa-user-tie"></i><span
                                                        class="ml-2 text-gray">{{ person.birthday }}</span></span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="card-body px-4 pt-0">
                                        <div class="d-flex">
                                            <a href="#contact"
                                               class="btn btn-sm btn-secondary mr-3 animate-up-2 px-3">{{ 'contact'|trans|capitalize }}</a>
                                            <a href="{{ path('app_student_portfolio', {id: student.id}) }}"
                                               class="btn btn-sm btn-primary animate-up-2 px-3"><i
                                                    class="fas fa-clipboard-list mr-2"></i>{{ 'See Details'|trans|capitalize }}
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            {% endif %}
        {% endfor %}
    {% endif %}
{% endblock %}

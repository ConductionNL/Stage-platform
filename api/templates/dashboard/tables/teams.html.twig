<div class="card border-light shadow-sm">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="h5">{{ 'teams'|trans|capitalize }}</h2></div>
            <div class="col text-right">
                {% if addPath is  defined %}
                    <a href="{{ path(addPath, {'id':'new' }) }}" class="btn btn-primary">{{ 'add'|trans|capitalize }}</a>
                {% else %}
                    <a href="{{ path('app_team_index') }}" class="btn btn-sm btn-secondary">{{ 'see all teams'|trans|capitalize }}</a>
                {% endif %}
            </div>
        </div>
    </div>
    {% if teams is  defined and teams|length > 0 %}
    <div class="table-responsive">
        <table class="table align-items-center table-flush">
            <thead class="thead-light">
            <tr>
                <th scope="col">{{ 'position'|trans|capitalize }}</th>
                <th scope="col">{{ 'organization'|trans|capitalize }}</th>
                <th scope="col">{{ 'status'|trans|capitalize }}</th>
                <th scope="col">Bounce rate</th>
            </tr>
            </thead>
            <tbody>
            {% for team in teams|slice(0, 10) %}
                <tr>
                    <th>{{ team.name }}</th>
                    <td></td>
                    <td></td>
                    {% if editPath is  defined %}
                        <a href="{{ path(editPath, {'id':team.id }) }}" class="btn btn-primary">{{ 'edit'|trans|capitalize }}</a>
                    {% else %}
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-{{ team.id }}">{{ 'edit'|trans|capitalize }}</button>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="card-body  text-center">
        <p>{{ 'no teams found'|trans|capitalize }}</p>
        {% if addPath is  defined %}
        <a href="{{ path(addPath, {'id':'new' }) }}" class="btn btn-primary">{{ 'add your first team!'|trans|capitalize }}</a>
        {% else %}
        <a href="{{ path('app_team_index') }}" class="btn btn-primary">{{ 'find a team'|trans|capitalize }}</a>
        {% endif %}
    </div>
    {% endif %}
</div>

<div class="card border-light shadow-sm">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="h5">{{ 'internships'|trans|capitalize }}</h2></div>
            <div class="col text-right"><a href="{{ path('app_internship_index') }}" class="btn btn-sm btn-secondary">See all</a></div>
        </div>
    </div>
    {% if internships is  defined and internships|length > 0 %}
    <div class="table-responsive">
        <table class="table align-items-center table-flush">
            <thead class="thead-light">
            <tr>
                <th scope="col">{{ 'name'|trans|capitalize }}</th>
                <th scope="col">Page Views</th>
                <th scope="col">Page Value</th>
                <th scope="col">Bounce rate</th>
            </tr>
            </thead>
            <tbody>
            {% for internship in internships|slice(0, 10) %}
                <tr>
                    <th>{{ internship.name }}</th>
                    <td>3,225</td>
                    <td>$20</td>
                    <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-{{ internship.id }}">{{ 'edit'|trans|capitalize }}</button></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="card-body">
        {{ 'no internships found'|trans|capitalize }}
    </div>
    {% endif %}
</div>

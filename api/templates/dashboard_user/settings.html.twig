{% extends "dashboard/base.html.twig" %}

{% block content %}

    <!-- breadcrumbs -->
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
        <div class="d-block mb-4 mb-md-0">
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
                <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent">
                    <li class="breadcrumb-item"><a href="{{ path('app_default_index') }}"><span
                                class="fas fa-home"></span></a></li>
                    <li class="breadcrumb-item"><a
                            href="{{ path('app_dashboard_index') }}">{{ 'Dashboard'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item active"><a
                            href="{{ path('app_dashboardorganization_settings') }}">{{ 'settings'|trans|capitalize }}</a>
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-xl-8">
            <div class="card card-body bg-white border-light shadow-sm mb-4">
                <h2 class="h5 mb-4">{{ 'about me'|trans|capitalize }}</h2>
                <form>
                    <div class="row">
                        {% if app.user.person is defined and app.user.person is not empty %}
                        {% set person = commonground_resource(app.user.person) %}
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label for="first_name">{{'First Name'|trans|capitalize}}</label>
                                <input class="form-control" id="first_name" type="text"
                                       value="{{ person.name }}" disabled>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label for="last_name">{{'Last Name'|trans|capitalize}}</label>
                                <input class="form-control" id="last_name" type="text" value="{{ person.familyName }}" disabled>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">{{'Save All'|trans|capitalize}}</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-12 col-xl-4">
            <div class="row">
                <div class="col-12 col-sm-6 col-xl-12">
                    <div class="card card-body bg-white border-light shadow-sm mb-4">
                        <h2 class="h5 mb-4">{{ 'Select profile photo'|trans|capitalize }}</h2>
                        <div class="d-xl-flex align-items-center">
                            <div>
                                <!-- Avatar -->
                                <div class="user-avatar xl-avatar mb-3">
                                    <img class="rounded" src="../../assets/img/team/profile-picture-3.jpg"
                                         alt="change avatar">
                                </div>
                            </div>
                            <div class="file-field">
                                <div class="d-flex justify-content-xl-center ml-xl-3">
                                    <div class="d-flex">
                                        <span class="icon icon-md"><span class="fas fa-paperclip mr-3"></span></span>
                                        <input type="file">
                                        <div class="d-md-block text-left">
                                            <div class="font-weight-normal text-dark mb-1">{{ 'Choose Image'|trans|capitalize }}</div>
                                            <div class="text-gray small">{{ 'JPG, GIF or PNG. Max size of 800K'|trans|capitalize }}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
